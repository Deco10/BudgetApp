@model IEnumerable<BudgetApp.ViewModels.Expenses.Output.CategoryViewModel>

@{
    ViewData["Title"] = "Kategorie";
}

<h1>Kategorie</h1>

<div class="row">
    <div class="col">
        @if (!Model.Any())
        {
            <p>Nie znaleziono żadnych kategorii</p>
        }
        else
        {
            <ul class="list-group">
                @foreach (var category in Model)
                {
                    <li class="list-group-item">@category.Name</li>
                }
            </ul>
        }
    </div>
</div>

<a class="btn btn-primary mt-3" asp-controller="Categories" asp-action="Add">Nowa kategoria</a>